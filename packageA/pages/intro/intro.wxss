.text-font {
    margin: 20px 20px 0 20px;
    font-size: 15px;
    line-height: 25px;
    position:relative;
    white-space: pre-wrap;
    opacity:1;
}
.transparent-image{
    position: absolute;
    bottom:110px;
    left: 0;
    width: 750rpx; /* 适应父容器的宽度 */
    height:100rpx;
    opacity: 0.9; 
    z-index:0;
    /* filter: blur(1px); */
}

.video-font {
    color: #73a5d6;
    text-align: center;
    font-size: 25px;
    margin-top: 20px;
    margin-bottom: 20px;
}
.text-with-image{
    color: #225486;
    text-align: center;
    font-size: 25px;
    margin-top: 20px;
    position:relative;
    margin-bottom: 20px;
    font-family:STFangsong  ;
    font-weight:bolder;
    z-index:1;
}

.video {
    display: flex;
    justify-content: center;
    align-items: center;
}

