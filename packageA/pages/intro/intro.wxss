@import "../../../utils/util.wxss";

page {
    height: 100%;
    width: 100%;
}

.swiper-item {
    height: 420rpx;
}

.swiper-item .wx-swiper-dot.wx-swiper-dot-active {
    width: 33rpx;
    background: #888888;
    border-radius: 15rpx;
}

.swiper-item-image {
    width: 100%;
}

.daohang {
    height: 140rpx;
    width: 140rpx;
    background-color: #22548695;
    border-radius: 50%;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    right:20rpx;
    margin-top: -35rpx;
    margin-left: 290rpx;
}

.title-font {
    color: #73a5d6;
    margin-left: 20px;
    margin-top:20px;
}

.hzcu-container{
    margin-top:30rpx;
    margin-left:15rpx;
    width:525rpx;
    height:150rpx;
}

