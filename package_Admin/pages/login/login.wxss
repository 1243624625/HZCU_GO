page {
    background-color: #2499f2;
    height: 100%;
    width: 100%;
}

.main {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.login_shadow{
    height: 60%;
    width: 60%;
    margin-top: -15%;
    background-color: whitesmoke;
    border-radius: 20rpx;
}

.login_shadow .hint {
    width: 100%;
	color: #000;
	font-weight: bold;
	font-size: 36rpx;
    text-align: center;
    height: 10%;
}

.form-group .title {
	font-size: 32rpx;
}

.icon {
    height: 25%;
    width: 100%;
    display: flex;
    justify-content: center;
}

.form-group {
    height: 15%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 5%;
    margin-right: 5%;
    border-bottom: 1rpx solid silver;
}

.title {
    font-weight: 500;
}

input {
    height: 60%;
}

.btn {
    background-color: skyblue;
    border-radius: 15rpx;
    color: #fff;
    background-color: #2499f2;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.describe {
    font-size: 26rpx;
    color: rgb(129, 128, 128);
    text-align: center;
}

.return {
    font-size: 26rpx;
    color: rgb(129, 128, 128);
    text-align: center;
    display: flex;
    justify-content: center;
}