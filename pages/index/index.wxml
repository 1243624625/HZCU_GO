<!--pages/index/index.wxml-->
<view style="height: 100%;">
    <view class="school_view">
        <view class="list">
            <view class="list-container" bindtap="tointro">
                <image src='{{school_icon}}' class='list-container-icon1'></image>
                <view>
                    <view class='list-container-font1'>
                        {{school_name_short}}简介
                    </view>
                    <view class='list-container-font2'>About {{school_name_English_short}}</view>
                </view>
                <image src='{{right_arrow}}' class='list-container-icon2'></image>
            </view>
            <view class="list-container" bindtap="tomap">
                <image src='{{map}}' class='list-container-icon1'></image>
                <view>
                    <view class='list-container-font1'>逛逛{{school_name_short}}</view>
                    <view class='list-container-font2'>Campus Tour</view>
                </view>
                <image src="{{right_arrow}}" class='list-container-icon2'></image>
            </view>
            <view class="list-container" bindtap="tomessage">
                <image src="{{school_life}}" class="list-container-icon1"></image>
                <view>
                    <view class='list-container-font1'>校园信息</view>
                    <view class='list-container-font2'>Campus Info</view>
                </view>
                <image src='{{right_arrow}}' class='list-container-icon2'></image>
            </view>
        </view>
    </view>
</view>