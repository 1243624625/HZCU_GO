/* pages/lo_ranking/lo_ranking.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #cde6ff;
}

.title {
    text-align: center;
    margin-top: 0rpx;
    margin-bottom: 10rpx;
    background-image: url('https://cdnjson.com/images/2023/12/10/W09H4OZEOTRELG1.gif');
    background-size: 12%,contain;
    background-position: 180rpx 10rpx;
    background-repeat: no-repeat;
}

.title-background {
  width: 100%; 
  height: 200rpx; 
}

.background-image {
  width: 100%;
  height: 100%;
  display: block;
}
.title-background2{
  width: 100%; 
  height: 5rpx; 
  margin: 0rpx 50rpx 0 50 rpx;
}
.background-image2 {
  width: 100%;
  height: 170rpx;
  display: block;
}

.title-1 {
    font-size: 50rpx;
    font-weight: bolder;
    color: #000000;
}

.title-2 {
    font-size: 30rpx;
    font-weight: normal;
    color: #000000;
}

.list {
    margin: 20rpx 40rpx 0 40rpx;
    border-radius: 20rpx;
    background-color: #ffffff;
}

.list-title {
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 0rpx 40rpx 0rpx 40rpx;
    font-size: 30rpx;
    font-weight: bolder;
    border-bottom: 1rpx solid #b95864;
}

.list-title-left {
    text-align: center;
    width: 200rpx;
}

.list-title-middle {
    text-align: center;
    width: 500rpx;
}

.list-title-right {
    text-align: center;
    width: 250rpx;
}


.list-result {
  height: 80rpx;
    margin: 5rpx 50rpx 10rpx 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-bottom: 5rpx solid #fffedc;
    font-size: 30rpx;
}

.list-result-left {
    text-align: center;
    width: 100rpx;
    
}

.list-result-middle {
    display: flex;
    flex-direction: column;
    width: 500rpx;
    text-align: center;
    font-size: 26rpx;
}
.list-result-mid2{
  font-size: 20rpx;
}

.list-result-right {
    text-align: center;
    width: 100rpx;
    font-size: 25rpx;
}

.list-rightturn {
  text-align: left;
  width: 30rpx;
}

.bottom {
    height: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0px 15px 0 15px;
    color: rgb(0, 0, 0);
}

.bottom-text {
    height: 20px;
    font-size: 12px;
    font-weight: lighter;
}

.picker-small {
  display: inline-block; 
  margin-left: 0rpx; 
  padding: 20rpx 5rpx; 
  background-color: #ecf3fa; 
  border-radius: 10rpx;
  font-weight:normal;
  line-height: normal;
  font-size: 40rpx; /* 减小字体大小 */
  align-items: center;
  /* text-decoration: underline; */
}

.picker-display {
  text-align: center;
  /* 其他需要的样式 */
}


