/* pages/self/self.wxss */
page {
    height: 100%;
}

.my {
    height: 100%;
    background: linear-gradient(to bottom, #dfe6e9, #ffffff);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.head {
    height: 300rpx;
    width: 95%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.headcard {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 95%;
    height: 280rpx;
    margin: 0 auto;
    background: white;
    border-radius: 30rpx;
}

.menu {
    width: 91%;
    background: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 16rpx;
    padding-bottom: 20rpx;
    font-size: 36rpx;
    color: #444444;
    border-radius: 30rpx;
}

.menu_row {
    display: flex;
    flex-direction: row;
    display: flex;
    align-items: center;
    height: 96rpx;
    margin-left: 4px;
    margin-right: 4px;
    border-bottom: 1px solid #353b48;
    width: 95%;
    background-color: white;
    border-radius: 30rpx;
}

.headcard_list {
    display: flex;
    align-items: center;
    width: 80%;
    height: 160rpx;
    margin-top: -85rpx;
    /* 调整这个值来向上移动 */
    border-bottom: 1px solid #000000
}

.center_image {
    width: 130rpx;
    height: 130rpx;
    overflow: hidden;
    margin-right: 0%;
}

.user_avatar {
    width: 100%;
    height: 100%;
}

.center_info {
    display: flex;
    flex-direction: column;
    margin-left: 20px;
    height: 125rpx;
    width: 380rpx;
    margin-left: 15rpx;
}

.user_name {
    font-size: 42rpx;
    margin-bottom: 10rpx;
}

.welcome {
    font-size: 30rpx;
    margin-top: 2px;
    color: grey;
}

.foot {
    font-size: 30rpx;
    color: #717776;
    text-align: center;
}

.U-login {
    background-color: white;
    border: 0;
    margin-top: 20rpx;
    width: 100%;
    border: 1rpx solid black;
    border-radius: 50rpx;
}

.righticon {
    width: 7%;
    height: 17%;
    position: relative; 
    left: 24rpx; 
    top: -95rpx;
    background-image: url("https://6f75-our-7gkst71offd1baef-1320228167.tcb.qcloud.la/images/school_info/pushpin.png?sign=7ecfe39712690c4ab34967a76c2cc6d7&t=1702804433");
    background-size: cover;/*确保图像完全适应容器*/
}